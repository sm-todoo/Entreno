                       </group>   
                         


                       <group>

                        <field name="tiene_mascota" string="Tiene Mascota" required="True"/>
                        
                         <field name="mascotas" string="Número de Mascotas" required="True"/>
                         <field name="tipo_mascotas" string="Tipo de Mascotas" required="True"/>                       
                         <field name="estudia_actualmente" string="Estudia Actualmente" required="True"/>
                         <field name="año_graduacion" string="Año de Graduación" required="True"/>
                         <field name="escolaridad" string="Escolaridad" required="True"/>
                         <field name="estado_civil" string="Estado Civil" required="True"/>
                       </group>

                        <group>
                         <field name="lic_conducir" string="Tiene licencia de Conducir" required="True"/>
                         <field name="tipo_lic_conducir" string="Tipo de Licencia para Conducir" required="True"/>
                         <field name="medio_transporte" string="Medio de Transporte Principal" required="True"/>
                         <field name="medio_transporte_sec" string="Medio de Transporte Secundario" required="True"/>
                         <field name="Horas_trabajo" string="Horas parra llegar al Trabajo" required="True"/>
                        </group>

                        <group string="Cónyuge">
                         <field name="primer_apellido_conyugue" string="Primer Apellido del Cónyuge" required="True" />
                         <field name="segundo_apellido_conyugue" string="Segundo Apellido del Cónyuge"/>
                         <field name="primer_nombre_conyugue" string="Primer Nombre del Cónyuge" required="True"/>
                         <field name="segundo_nombre_conyugue" string="Segundo Nombre del Cónyuge"/>
                         <field name="escolaridad_conyugue" string="Escolaridad del Cónyuge"/>
                         <field name="genero_conyugue" string="Genero del Cónyuge" required="True"/>
                         <field name="lugar_nacimiento_conyugue" string="Lugar de Nacimiento del Cónyuge" required="True"/>
                         <field name="pais_nacimiento_conyugue" string="País de Nacimiento del Cónyuge" required="True"/>


                       </group>


                      </group>
                       
                  </page>

                  <page string="Información Específica">
                    <group>
                      <group string="Otro Idioma">
                        <field name="otro_idioma" string="Idioma"/>
                        <field name="porcent_dominio" string="Porcentaje Dominio"/>
